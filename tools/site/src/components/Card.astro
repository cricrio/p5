---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<div class='rounded-md overflow-hidden'>
  <div>
    <a href={href}>
      <slot />
      <h2 class='bg-slate-700 hover:bg-slate-500 p-1 text-center'>
        {title}
      </h2>
    </a>
  </div>
</div>
