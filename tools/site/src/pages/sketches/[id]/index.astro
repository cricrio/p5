---
import data from '../../../../data.json';
import Layout from '../../../layouts/Layout.astro';

export function getStaticPaths() {
  return data.map((i) => ({ params: { id: i.name } }));
}
const siteUrl = import.meta.env.SITE_URL;

const { id } = Astro.params;
---

<Layout title={id}>
  <section class='md:w-9/12 w-full m-auto'>
    <h1 class='font-bold'>
      <a href='/'>Sketches {'> '}</a>
      {id}
    </h1>

    <iframe
      src=`${siteUrl}/sketches/${id}/fullscreen`
      class='w-full aspect-video'>Loading sketch ...</iframe
    >
  </section>
</Layout>
